# ============================================================================
# Local Development Environment Configuration
# ============================================================================
# Copy this file to .env for local development
# Never commit .env to version control!

# Flask Application Settings
DEBUG=true                    # Enable Flask debug mode for development
HOST=0.0.0.0                 # Bind to all interfaces (use 127.0.0.1 for localhost only)
PORT=8080                    # Local development server port

# Container Configuration (for local Docker testing)
CONTAINER_IMAGE_NAME=portfolio-app    # Local Docker image name
CONTAINER_TAG=dev                     # Tag for local development builds
CONTAINER_PORT=8080                   # Port exposed by container

# Optional: Override application metadata from pyproject.toml
# APP_NAME="Portfolio Dev Environment"
# VERSION="dev-build"

# Note: This template is for local development only.
# For GCP deployment configuration, use .env.deployment as a template
